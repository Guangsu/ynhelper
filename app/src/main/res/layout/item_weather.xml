<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/width_2_80">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星期五"/>

    <ImageView
        android:id="@+id/iv_weather"
        android:layout_width="@dimen/width_5_80"
        android:layout_height="@dimen/width_5_80"
        android:src="@drawable/weather_00"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_temp_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="26"/>

    <TextView
        android:id="@+id/tv_temp_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_temp_low"
        android:layout_marginRight="@dimen/width_2_80"
        android:text="32"/>

</RelativeLayout>